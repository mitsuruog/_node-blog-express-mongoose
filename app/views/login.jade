extends layout

block page
  - var menu = "login"

block content
  .col-md-4.col-md-offset-4
    h2 Log in
    // [MEMO] flashメッセージはsessionに蓄積されるため、shift()することで表示する際に削除する
    while message = flash.shift()
      p= message.message
    div
      form(action="/auth/login", method="POST")
        p
          input.form-control(name="email", type="text", placeholder="sample@sample.com")
        p
          input.form-control(name="password", type="password", placeholder="*****")
        p
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
